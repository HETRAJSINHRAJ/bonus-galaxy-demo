    ]
  },
  
  "designPrinciples": {
    "1": "Modern and clean - Use generous white space and clear visual hierarchy",
    "2": "Purple gradient brand identity - Primary color scheme based on indigo-purple gradient",
    "3": "Card-based layout - Group content in elevated cards with subtle shadows",
    "4": "Smooth animations - Add subtle hover effects and transitions for interactivity",
    "5": "Mobile-first responsive - Design scales seamlessly from mobile to desktop",
    "6": "Glassmorphism accents - Use frosted glass effects for overlays and stats",
    "7": "Clear CTAs - Prominent gradient buttons guide user actions",
    "8": "Icon-driven features - Use icons to make features quickly scannable"
  }
}


